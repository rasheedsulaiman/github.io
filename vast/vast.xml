<VAST version="3.0">
  <Ad id="12345">
    <InLine>
      <AdSystem>MyAdServer</AdSystem>
      <AdTitle>Sample Video Ad</AdTitle>

      <Creatives>
        <Creative>
          <Linear>
            <Duration>00:01:00</Duration>
            <MediaFiles>
              <!-- VPAID JS Ad -->
              <MediaFile 
                delivery="progressive" 
                type="application/javascript" 
                apiFramework="VPAID" 
                width="640" 
                height="360">
                <![CDATA[https://rasheedsulaiman.github.io/vast/vpaid.js]]>
              </MediaFile>

              <!-- MP4 Video Ad -->
              <MediaFile 
                delivery="progressive" 
                type="video/mp4" 
                width="640" 
                height="360" 
                bitrate="500">
                <![CDATA[https://rasheedsulaiman.github.io/vast/test-ad.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>

      <!-- <Error><![CDATA[https://example.com/error]]></Error> -->
    </InLine>
  </Ad>
</VAST>